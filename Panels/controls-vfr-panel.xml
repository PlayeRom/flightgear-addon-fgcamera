<?xml version="1.0"?>

<!DOCTYPE PropertyList SYSTEM "panel.dtd">

<PropertyList>
    <name>Controls VFR Panel</name>
    <background>Aircraft/Generic/Panels/Textures/transparent-bg.rgb</background>
    <w>1024</w>
    <h>150</h>
    <y-offset>0</y-offset>
    <view-height>150</view-height>

    <instruments>
        <!-- controls visual feedback cluster -->
        <instrument include="Aircraft/Instruments/controls.xml">
            <name>Control Position Indicators</name>
            <x>910</x>
            <y>60</y>
            <w>90</w>
            <h>90</h>
        </instrument>

        <instrument include="Aircraft/Instruments/throttle-quadrant.xml">
            <name>Throttle Position Indicators</name>
            <x>980</x>
            <y>60</y>
            <w>50</w>
            <h>90</h>
        </instrument>
        <!-- end controls visual feedback cluster -->
    </instruments>
</PropertyList>
