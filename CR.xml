<PropertyList>

	<params include="params.xml"/>

<!-- Resonance generator -->



	<filter>
		<type>exponential</type>
		<filter-time>
			<condition>
				<property alias="/params/cr/resonance/bump"/>
			</condition>
			<value>0</value>
		</filter-time>
		<filter-time>
			<property alias="/params/cr/resonance/attack"/>
		</filter-time>
		<input>
			<condition>
				<property alias="/params/cr/resonance/bump"/>
			</condition>
			<property alias="/params/cr/resonance/offset"/>
		</input>
		<input>
			<value>1</value>
		</input>
		<output alias="/params/cr/resonance/offset1"/>
	</filter>
	<filter>
		<type>exponential</type>
		<filter-time>
			<condition>
				<property alias="/params/cr/resonance/bump"/>
			</condition>
			<value>0</value>
		</filter-time>
		<filter-time>
			<property alias="/params/cr/resonance/release"/>
		</filter-time>
		<input>
			<condition>
				<property alias="/params/cr/resonance/bump"/>
			</condition>
			<value>0</value>
		</input>
		<input>
			<property alias="/params/cr/resonance/offset1"/>
		</input>
		<output alias="/params/cr/resonance/offset2"/>
	</filter>



	<filter>
		<type>gain</type>
		<input>
			<expression>
				<difference>
					<property alias="/params/cr/resonance/offset1"/>
					<property alias="/params/cr/resonance/offset2"/>
				</difference>
			</expression>
		</input>
		<output alias="/params/cr/resonance/offset"/>
	</filter>

</PropertyList>