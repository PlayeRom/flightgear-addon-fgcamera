			<key n="360">
				<mod-shift>
					<!-- name> PageUp </name>
					<desc>Camera Up</desc -->
					<binding>
						<command>fgcamera-adjust</command>
						<velocity>1</velocity>
						<dof>y</dof>
					</binding>
					<mod-up>
						<binding>
							<command>fgcamera-adjust</command>
							<velocity>0</velocity>
							<dof>y</dof>
						</binding>
					</mod-up>
				</mod-shift>
			</key>

			<key n="361">
