<?xml version="1.0" encoding="UTF-8" ?>

<PropertyList>

	<name>fgcamera-welcome</name>
	<layout>vbox</layout>

	<group>
		<layout>hbox</layout>
		<empty><stretch>1</stretch></empty>
		<text>
			<halign>left</halign>
			<label>FGCamera. Welcome!</label>
		</text>
		<empty><stretch>1</stretch></empty>
		<button>
			<halign>right</halign>
			<pref-width>16</pref-width>
			<pref-height>16</pref-height>
			<legend> </legend>
			<key>Esc</key>
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>
	</group>

	<hrule/>

	<group>
		<layout>vbox</layout>
		<padding>6</padding>

		<text>
			<halign>center</halign>
			<label>FGCamera is enabled and ready to define custom camera views!</label>
		</text>
		<text>
			<halign>center</halign>
			<label></label>
		</text>

		<text>
			<halign>center</halign>
			<label>This add-on enables user to define custom camera views with different view modifications</label>
		</text>
		<text>
			<halign>center</halign>
			<label>(e.g. head shake) and quickly switch between them using keyboard shortcuts.</label>
		</text>
		<text>
			<halign>center</halign>
			<label></label>
		</text>

		<text>
			<halign>center</halign>
			<label>Please note, that FGCamera modifies the keyboard and mouse handling. </label>
		</text>
		<text>
			<halign>center</halign>
			<label>Especially keys 0-9 switches between defined camera views</label>
		</text>
		<text>
			<halign>center</halign>
			<label>and they behave differently than in the vanilla FlightGear version.</label>
		</text>
	</group>

	<hrule/>

	<group>
		<layout>hbox</layout>
		<padding>6</padding>

		<checkbox>
			<label>Do not show this screen at FlightGear startup</label>
			<halign>center</halign>
			<property>/addons/by-id/a.marius.FGCamera/addon-devel/welcome-skip</property>
			<binding>
				<command>property-toggle</command>
				<property>/addons/by-id/a.marius.FGCamera/addon-devel/welcome-skip</property>
			</binding>
			<binding>
				<command>dialog-apply</command>
			</binding>
			<live>true</live>
		</checkbox>

	</group>

	<hrule/>

	<group>
		<layout>hbox</layout>
		<padding>6</padding>

		<button>
			<halign>center</halign>
			<legend>Close</legend>
			<pref-width>210</pref-width>
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>
	</group>

</PropertyList>