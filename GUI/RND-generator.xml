							</binding>
						</dial>

						<text>
							<label>0.0</label>
							<format>%0.1f</format>
							<live>true</live>
							<property>/sim/fgcamera/dialogs/RND/generator/resonance/attack</property>
						</text>
					</group>

					<group>
						<layout>vbox</layout>
						<default-padding>0</default-padding>
						<text><label>intensity</label></text>

						<dial>
							<max>5</max>
							<property>/sim/fgcamera/dialogs/RND/generator/resonance/intensity</property>
							<binding>
								<command>dialog-apply</command>
							</binding>
							<binding>
								<command>nasal</command>
								<script>set_data("resonance", "intensity")</script>
							</binding>
						</dial>

						<text>
							<label>0.0</label>
							<format>%0.1f</format>
							<live>true</live>
							<property>/sim/fgcamera/dialogs/RND/generator/resonance/intensity</property>
						</text>

						<empty>
							<pref-height>6</pref-height>
