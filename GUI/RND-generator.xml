				</group>

				<empty> <pref-height>6</pref-height> </empty>

				<group>
					<layout>hbox</layout>

					<empty> <pref-width>6</pref-width> </empty>
					<group>
						<layout>vbox</layout>
						<default-padding>0</default-padding>

						<text>
							<label>LP filter</label>
						</text>

						<dial>
							<max>6</max>
							<property>/sim/fgcamera/dialogs/RND/generator/LFO1/filter</property>
							<binding>
								<command>dialog-apply</command>
							</binding>
							<binding>
								<command>nasal</command>
								<script>set_data("LFO1", "filter")</script>
							</binding>
						</dial>

						<text>
							<label>0.00</label>
							<format>%0.2f</format>
							<live>true</live>
							<property>/sim/fgcamera/dialogs/RND/generator/LFO1/filter</property>
						</text>

						<empty>
							<pref-height>6</pref-height>
						</empty>

						<text>
							<label>level</label>
						</text>

						<dial>
							<width>20</width>
							<property>/sim/fgcamera/dialogs/RND/generator/LFO1/level</property>
							<binding>
								<command>dialog-apply</command>
							</binding>
							<binding>
								<command>nasal</command>
								<script>set_data("LFO1", "level")</script>
							</binding>
						</dial>

						<text>
							<label>0.00</label>
							<format>%0.2f</format>
							<live>true</live>
							<property>/sim/fgcamera/dialogs/RND/generator/LFO1/level</property>
						</text>
					</group>

					<group>
						<layout>vbox</layout>
						<default-padding>0</default-padding>

						<text><label>intensity</label></text>

						<dial>
							<max>10</max>
							<property>/sim/fgcamera/dialogs/RND/generator/LFO1/intensity</property>
							<binding>
								<command>dialog-apply</command>
							</binding>
							<binding>
								<command>nasal</command>
								<script>set_data("LFO1", "intensity")</script>
							</binding>
						</dial>

						<text>
							<label>0.0</label>
							<format>%0.1f</format>
							<live>true</live>
							<property>/sim/fgcamera/dialogs/RND/generator/LFO1/intensity</property>
						</text>

						<empty>
