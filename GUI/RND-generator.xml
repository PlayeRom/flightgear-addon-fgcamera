<?xml version="1.0"?>

<PropertyList>
	<name>RND-generator</name>
	<layout>vbox</layout>
	<width>700</width>
	<x>20</x>
	<y>-50</y>

<!-- Title -->
	<group>
		<layout>hbox</layout>

		<empty><stretch>1</stretch></empty>

		<button>
			<legend> </legend>
			<key>Esc</key>
			<pref-width>16</pref-width>
			<pref-height>16</pref-height>
			<binding>
				<command>dialog-show</command>
				<dialog-name>RND-mixer</dialog-name>
			</binding>
			<binding>
				<command>dialog-close</command>
				<dialog-name>RND-generator</dialog-name>
			</binding>
		</button>
	</group>

	<hrule/>

	<group>
		<layout>vbox</layout>

		<group> <!-- top row -->
			<layout>hbox</layout>

			<group> <!-- sine generator -->
				<layout>vbox</layout>

				<group>
					<layout>hbox</layout>

					<text><label>sine generator</label></text>
					<empty> <stretch>true</stretch> </empty>

					<checkbox>
						<width>15</width>
						<height>15</height>
						<property>/sim/fgcamera/dialogs/RND/generator/sine[0]</property>
						<binding>
							<command>dialog-apply</command>
						</binding>
						<binding>
							<command>nasal</command>
							<script>L.CurrentCamera().effect("RND").generator(0, 0)
								.sine("enable", getprop("/sim/fgcamera/dialogs/RND/generator/sine[0]"))</script>
						</binding>
					</checkbox>
				</group>

				<empty> <pref-height>6</pref-height> </empty>

				<group>
					<layout>hbox</layout>

					<group>
						<layout>vbox</layout>
						<default-padding>0</default-padding>

						<text>
							<label>frequency</label>
						</text>

						<dial>
							<max>9.0</max>
							<property>/sim/fgcamera/dialogs/RND/generator/sine[1]</property>
							<binding>
								<command>dialog-apply</command>
							</binding>
							<binding>
								<command>nasal</command>
								<script>L.CurrentCamera().effect("RND").generator(0, 0)
									.sine("frequency", getprop("/sim/fgcamera/dialogs/RND/generator/sine[1]"))</script>
							</binding>
						</dial>

						<text>
							<label>0.00</label>
							<format>%0.2f</format>
							<live>true</live>
							<property>/sim/fgcamera/dialogs/RND/generator/sine[1]</property>
						</text>

						<empty>
							<pref-height>6</pref-height>
						</empty>

						<text>
							<label>level</label>
						</text>

						<dial>
							<width>20</width>
							<property>/sim/fgcamera/dialogs/RND/generator/sine[2]</property>
							<binding>
								<command>dialog-apply</command>
							</binding>
							<binding>
								<command>nasal</command>
								<script>L.CurrentCamera().effect("RND").generator(0, 0)
									.sine("level", getprop("/sim/fgcamera/dialogs/RND/generator/sine[2]"))</script>
							</binding>
						</dial>

						<text>
							<label>0.00</label>
							<format>%0.2f</format>
							<live>true</live>
							<property>/sim/fgcamera/dialogs/RND/generator/sine[2]</property>
						</text>
					</group>

					<slider>
						<name>sine</name>
						<vertical>true</vertical>
						<pref-height>150</pref-height>
						<live>true</live>
						<property>/sim/fgcamera/dialogs/RND/generator/output[0]</property>
						<min>-1</min>
						<max>1</max>
					</slider>
				</group>
			</group> <!-- /sine generator-->

			<vrule/>

			<group> <!-- resonance generator -->
				<layout>vbox</layout>

				<group>
					<layout>hbox</layout>

					<text>
