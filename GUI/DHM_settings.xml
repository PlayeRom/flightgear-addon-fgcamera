			<property>/sim/fgcamera/dialogs/DHM-settings/x-axis/constant-g</property>
			<min>0</min>
			<max>2</max>
			<fraction>0.1</fraction>
			<step>0.01</step>
				<binding>
					<command>dialog-apply</command>
				</binding>
