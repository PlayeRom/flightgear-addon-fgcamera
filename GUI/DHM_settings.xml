<?xml version="1.0"?>

<PropertyList>
	<name>DHM-settings</name>
	<layout>vbox</layout>
	<width>430</width>
	<x>20</x>
	<y>-50</y>
	<group>
		<layout>hbox</layout>

		<button>
			<legend> </legend>
			<pref-width>16</pref-width>
			<pref-height>16</pref-height>
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>

		<empty><stretch>1</stretch></empty>

		<text>
			<label>Dynamic Head Movement</label>
		</text>

		<empty><stretch>1</stretch></empty>

		<button>
			<legend> </legend>
			<key>Esc</key>
			<pref-width>16</pref-width>
			<pref-height>16</pref-height>
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>

	</group>

	<hrule/>

	<group>
		<layout>hbox</layout>
		<text>
			<label>Head mass</label>
		</text>
		<empty><stretch>1</stretch></empty>
		<slider>
			<pref-width>200</pref-width>
			<property>/sim/fgcamera/dialogs/DHM-settings/head-mass</property>
			<fraction>0.3</fraction>
			<step>1</step>
			<min>0</min>
			<max>30</max>
				<binding>
					<command>dialog-apply</command>
				</binding>
				<binding>
					<command>dialog-update</command>
				</binding>
		</slider>
		<text>
			<label>999.9</label> <!-- placeholder for width -->
			<property>/sim/fgcamera/dialogs/DHM-settings/head-mass</property>
		</text>
	</group>

	<group>
		<layout>hbox</layout>
		<text>
			<label>G-load release</label>
		</text>
		<empty><stretch>1</stretch></empty>
		<slider>
			<pref-width>200</pref-width>
			<property>/sim/fgcamera/dialogs/DHM-settings/g-load-release</property>
			<fraction>0.3</fraction>
			<step>0.01</step>
			<min>0</min>
			<max>0.3</max>
				<binding>
					<command>dialog-apply</command>
				</binding>
				<binding>
					<command>dialog-update</command>
				</binding>
				<binding>
					<command>nasal</command>
					<script>set_filter()</script>
				</binding>
		</slider>
		<text>
			<label>999.9</label> <!-- placeholder for width -->
			<property>/sim/fgcamera/dialogs/DHM-settings/g-load-release</property>
		</text>
	</group>

	<group>
