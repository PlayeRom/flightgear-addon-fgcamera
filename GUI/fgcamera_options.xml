<?xml version="1.0"?>

<PropertyList>
	<name>fgcamera-options</name>
	<layout>vbox</layout>
	<width>330</width>
	<x>20</x>
	<y>50</y>
	<group>
		<layout>hbox</layout>

		<button>
			<legend> </legend>
			<pref-width>16</pref-width>
			<pref-height>16</pref-height>
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>

		<empty><stretch>1</stretch></empty>

		<text>
			<label>FGCamera options</label>
		</text>

		<empty><stretch>1</stretch></empty>

		<button>
			<legend> </legend>
			<key>Esc</key>
			<pref-width>16</pref-width>
			<pref-height>16</pref-height>
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>

	</group>

	<hrule/>

	<checkbox>
		<halign>left</halign>
		<label>"spring loaded" mouse mode</label>
		<property>/sim/fgcamera/mouse/spring-loaded</property>
		<binding>
			<command>dialog-apply</command>
		</binding>
	</checkbox>

	<checkbox>
		<halign>left</halign>
		<label>play sounds (n/a)</label>
		<property>/autopilot/locks/heading</property>
	</checkbox>

	<hrule/>

	<group>
		<layout>hbox</layout>
		<empty><stretch>1</stretch></empty>
		<button>
			<legend>Save</legend>
			<pref-width>90</pref-width>
			<pref-height>30</pref-height>
		</button>

		<button>
			<legend>Close</legend>
			<pref-width>90</pref-width>
			<pref-height>30</pref-height>
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>
		<empty><stretch>1</stretch></empty>
	</group>
</PropertyList>
