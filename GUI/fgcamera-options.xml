<?xml version="1.0"?>

<PropertyList>
	<name>fgcamera-options</name>
	<layout>vbox</layout>
	<group>
		<layout>hbox</layout>

		<empty><stretch>1</stretch></empty>

		<text>
			<label>FGCamera options</label>
		</text>

		<empty><stretch>1</stretch></empty>

		<button>
			<legend> </legend>
			<key>Esc</key>
			<pref-width>16</pref-width>
			<pref-height>16</pref-height>
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>

	</group>

	<hrule/>

	<group>
		<layout>vbox</layout>
		<padding>6</padding>

		<checkbox>
			<halign>left</halign>
			<label>"spring loaded" mouse mode</label>
			<property>/sim/fgcamera/mouse/spring-loaded</property>
			<binding>
				<command>dialog-apply</command>
			</binding>
		</checkbox>

		<checkbox>
			<halign>left</halign>
			<label>Enable mini dialog</label>
			<property>/sim/fgcamera/mini-dialog-enable</property>
			<binding>
				<command>dialog-apply</command>
			</binding>
			<binding>
				<command>nasal</command>
				<script><![CDATA[
					fgcamera.setMiniDialogListener();
				]]></script>
			</binding>
		</checkbox>

		<group>
			<layout>hbox</layout>
			<text>
				<label>Mini dialog type</label>
				<halign>left</halign>
				<enable>
					<property>/sim/fgcamera/mini-dialog-enable</property>
				</enable>
			</text>
			<combo>
				<name>mini-dialog-type</name>
				<halign>fill</halign>
				<stretch>1</stretch>
				<property>/sim/fgcamera/mini-dialog-type</property>
				<enable>
					<property>/sim/fgcamera/mini-dialog-enable</property>
				</enable>
				<binding>
					<command>dialog-apply</command>
					<object-name>mini-dialog-type</object-name>
				</binding>
				<binding>
					<command>nasal</command>
					<script><![CDATA[
						fgcamera.setMiniDialogListener();
					]]></script>
				</binding>
				<value>simple</value>
				<value>slots</value>
			</combo>
		</group>

		<checkbox>
			<halign>left</halign>
			<label>Autohide mini dialog</label>
			<property>/sim/fgcamera/mini-dialog-autohide</property>
			<enable>
				<property>/sim/fgcamera/mini-dialog-enable</property>
			</enable>
			<binding>
				<command>dialog-apply</command>
			</binding>
			<binding>
				<command>nasal</command>
				<script><![CDATA[
					fgcamera.setMiniDialogListener();
				]]></script>
			</binding>
		</checkbox>

		<checkbox>
			<halign>left</halign>
			<label>Use Ctrl with numeric keys</label>
			<property>/sim/fgcamera/use-ctrl-with-numkeys</property>
			<binding>
				<command>dialog-apply</command>
			</binding>
		</checkbox>
	</group>

	<hrule/>

	<group>
		<layout>hbox</layout>
		<padding>6</padding>
		<empty><stretch>1</stretch></empty>

		<button>
			<legend>Save</legend>
			<pref-width>90</pref-width>
			<pref-height>30</pref-height>
			<binding>
				<command>dialog-apply</command>
			</binding>
			<binding>
				<command>nasal</command>
				<script><![CDATA[
					fgcamera.save_cameras();
				]]></script>
			</binding>
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>

		<button>
			<legend>Close</legend>
			<key>Esc</key>
			<pref-width>90</pref-width>
			<pref-height>30</pref-height>
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>
		<empty><stretch>1</stretch></empty>
	</group>
</PropertyList>
