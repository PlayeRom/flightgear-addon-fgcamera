<PropertyList>
	<!-- params include="params.xml"/ -->

	<filter>
		<type>gain</type>
		<input>
			<expression>
				<pow>
					<sum>
						<product>
							<property>/world-camera/raw/altitude-ft</property>
							<value>0.3048</value>
						</product>
						<value>6371000</value>
					</sum>
					<value>-1</value>
				</pow>
			</expression>
		</input>
		<output>/world-camera/velocity-scale</output>
	</filter>

	<filter>
		<type>gain</type>
		<!-- gain>
			<property>/sim/fgcamera/current-camera/view-adjustment/linear-velocity</property>
		</gain -->
		<input>
			<expression>
				<sum>
					<product>
						<property>/sim/fgcamera/view-adjustment/rotated/x-velocity</property>
						<property>/world-camera/velocity-scale</property>
						<property>/sim/time/delta-realtime-sec</property>
						<pow>
							<product>
								<cos>
									<deg2rad>
										<property>/world-camera/latitude-deg</property>
									</deg2rad>
								</cos>
								<value>6371</value>
							</product>
							<value>-1</value>
						</pow>
						<value>6371</value>
					</product>
					<property>/world-camera/raw/longitude-deg</property>
				</sum>
			</expression>
		</input>
		<output>/world-camera/raw/longitude-deg</output>
	</filter>
	<filter>
		<type>gain</type>
		<input>
			<expression>
				<sum>
					<product>
						<property>/sim/fgcamera/view-adjustment/rotated/y-velocity</property>
						<property>/sim/time/delta-realtime-sec</property>
						<value>3.28083</value>
					</product>
					<property>/world-camera/raw/altitude-ft</property>
				</sum>
			</expression>
		</input>
		<output>/world-camera/raw/altitude-ft</output>
	</filter>
	<filter>
		<type>gain</type>
		<input>
			<expression>
				<sum>
					<product>
						<property>/sim/fgcamera/view-adjustment/rotated/z-velocity</property>
						<property>/world-camera/velocity-scale</property>
						<property>/sim/time/delta-realtime-sec</property>
						<value>-1</value>
					</product>
					<property>/world-camera/raw/latitude-deg</property>
				</sum>
			</expression>
		</input>
		<output>/world-camera/raw/latitude-deg</output>
	</filter>

	<filter>
		<type>exponential</type>
		<filter-time>
			<condition>
				<property>/sim/fgcamera/view-movement/start-moving</property>
			</condition>
			<value>0</value>
		</filter-time>
		<filter-time>0.2</filter-time>
		<input>
			<condition>
				<property>/sim/fgcamera/view-movement/start-moving</property>
			</condition>
			<value>0</value>
		</input>
		<input>
			<property>/world-camera/raw/longitude-deg</property>
		</input>
		<output>/world-camera/longitude-deg</output>
	</filter>
	<filter>
		<type>exponential</type>
		<filter-time>
			<condition>
				<property>/sim/fgcamera/view-movement/start-moving</property>
			</condition>
			<value>0</value>
		</filter-time>
		<filter-time>0.2</filter-time>
		<input>
			<condition>
				<property>/sim/fgcamera/view-movement/start-moving</property>
			</condition>
			<value>0</value>
		</input>
		<input>
			<property>/world-camera/raw/altitude-ft</property>
		</input>
		<output>/world-camera/altitude-ft</output>
	</filter>
	<filter>
		<type>exponential</type>
		<filter-time>
			<condition>
				<property>/sim/fgcamera/view-movement/start-moving</property>
			</condition>
			<value>0</value>
		</filter-time>
		<filter-time>0.2</filter-time>
		<input>
			<condition>
				<property>/sim/fgcamera/view-movement/start-moving</property>
			</condition>
			<value>0</value>
		</input>
		<input>
			<property>/world-camera/raw/latitude-deg</property>
		</input>
		<output>/world-camera/latitude-deg</output>
	</filter>


</PropertyList>