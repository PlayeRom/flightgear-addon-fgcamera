<?xml version="1.0" encoding="UTF-8"?>
<!-- Keyboard bindings for fgcamera -->
<PropertyList>
    <key n="32">
        <mod-ctrl>
            <name>Ctrl-Space</name>
            <desc>toggle mouse mode</desc>
            <repeatable>0</repeatable>
            <binding>
                <command>nasal</command>
                <script>fgcamera.toggleYoke()</script>
            </binding>
        </mod-ctrl>
    </key>

    <key n="360">
        <mod-ctrl>
            <name>Ctrl-Page Up</name>
            <desc>Camera Up</desc>
            <binding>
                <command>fgcamera-adjust</command>
                <velocity>1</velocity>
                <dof>y</dof>
            </binding>
            <mod-up>
                <binding>
                    <command>fgcamera-adjust</command>
                    <velocity>0</velocity>
                    <dof>y</dof>
                </binding>
            </mod-up>
        </mod-ctrl>
    </key>

    <key n="361">
        <mod-ctrl>
            <name>Ctrl-Page Down</name>
            <desc>Camera Down</desc>
            <binding>
                <command>fgcamera-adjust</command>
                <velocity>-1</velocity>
                <dof>y</dof>
            </binding>
            <mod-up>
                <binding>
                    <command>fgcamera-adjust</command>
                    <velocity>0</velocity>
                    <dof>y</dof>
                </binding>
            </mod-up>
        </mod-ctrl>
    </key>

    <key n="357">
        <mod-ctrl>
            <name>Ctrl-Up</name>
            <desc>Camera forward</desc>
            <binding>
                <command>fgcamera-adjust</command>
