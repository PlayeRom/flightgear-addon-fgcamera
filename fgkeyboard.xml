            </binding>
            <binding>
                <condition>
                    <not><property>/sim/fgcamera/use-ctrl-with-numkeys</property></not>
                </condition>
                <command>property-assign</command>
                <property>/controls/flight/aileron-trim</property>
                <value>0</value>
            </binding>
            <binding>
                <condition>
                    <not><property>/sim/fgcamera/use-ctrl-with-numkeys</property></not>
                </condition>
                <command>property-assign</command>
                <property>/controls/flight/rudder-trim</property>
                <value>0</value>
            </binding>

            <!-- FGCamera binding -->
            <binding>
                <condition>
                    <property>/sim/fgcamera/use-ctrl-with-numkeys</property>
                </condition>
                <command>fgcamera-select</command>
                <camera-id>4</camera-id>
            </binding>
