    <key n="48">
        <name>0</name>
        <desc>Preset view 0</desc>

        <!-- Default FG bindings -->
        <!-- <desc>Move rudder left</desc> -->
        <binding>
            <condition>
                <property>/sim/fgcamera/use-ctrl-with-numkeys</property>
            </condition>
            <command>property-adjust</command>
            <property>/controls/flight/rudder</property>
            <step type="double">-0.05</step>
        </binding>

        <!-- FGCamera binding -->
        <binding>
            <condition>
                <not><property>/sim/fgcamera/use-ctrl-with-numkeys</property></not>
            </condition>
            <command>fgcamera-select</command>
            <camera-id>9</camera-id>
        </binding>
        <mod-ctrl>
            <condition>
                <property>/sim/fgcamera/use-ctrl-with-numkeys</property>
            </condition>
            <binding>
                <command>fgcamera-select</command>
                <camera-id>9</camera-id>
            </binding>
        </mod-ctrl>
    </key>

    <key n="49">
        <name>1</name>
        <desc>Preset view 1</desc>

        <!-- Default FG bindings -->
        <!-- <desc>Elevator trim down</desc> -->
        <binding>
            <condition>
                <property>/sim/fgcamera/use-ctrl-with-numkeys</property>
            </condition>
            <command>property-adjust</command>
            <property>/controls/flight/elevator-trim</property>
            <step type="double">-0.001</step>
        </binding>

        <!-- FGCamera binding -->
        <binding>
            <condition>
                <not><property>/sim/fgcamera/use-ctrl-with-numkeys</property></not>
            </condition>
            <command>fgcamera-select</command>
            <camera-id>0</camera-id>
        </binding>

        <mod-ctrl>
            <!-- Default FG bindings -->
            <binding>
                <condition>
                    <not><property>/sim/fgcamera/use-ctrl-with-numkeys</property></not>
                </condition>
                <command>property-adjust</command>
                <property>/controls/flight/elevator-trim</property>
                <step type="double">-0.05</step>
            </binding>

            <!-- FGCamera binding -->
            <binding>
                <condition>
                    <property>/sim/fgcamera/use-ctrl-with-numkeys</property>
                </condition>
                <command>fgcamera-select</command>
                <camera-id>0</camera-id>
            </binding>
        </mod-ctrl>
    </key>

    <key n="0">
        <name>Ctrl-2</name>
        <desc>Preset view 2</desc>

        <!-- FGCamera binding -->
        <mod-ctrl>
            <binding>
                <condition>
                    <property>/sim/fgcamera/use-ctrl-with-numkeys</property>
                </condition>
                <command>fgcamera-select</command>
                <camera-id>1</camera-id>
